{% extends 'base.html.twig' %}


{% block body %}


<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <img src="/uploads/{{ product.illustration }}" class="img-fluid" alt="{{ product.name }}">
        </div>

        <div class="col-md-6">
            <small><i><a href="{{ path('app_category', {slug: product.category.slug}) }}">{{ product.category.name }}</a> > {{ product.name }}</i></small>
            <h1>{{ product.name }}</h1>
            <strong><span class="d-block mb-3">{{ product.pricewt | price }}</span></strong>
            {{ product.description|raw }}
            <div class="d-flex align-items-center mt-3">
                <a href="{{ path('app_cart_add', {id: product.id}) }}" class="btn btn-success w-100">Ajouter au panier</a>
                
                {% if app.user %}
                    {% if product in app.user.wishlist %}
                        <a href="{{path('app_account_wishlist_remove', {id: product.id})}}" class="wishlist-icon wishlist-icon-active" style="margin-left: 10px;" ><i data-feather="heart"></i></a>
                    {% else %}
                        <a href="{{path('app_account_wishlist_add', {id: product.id})}}" class="wishlist-icon" style="margin-left: 10px;" ><i data-feather="heart"></i></a>
                    {% endif %}
                {% else %}
                    <a data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample" class="btn btn-outline-success ms-3 border-2" ><i data-feather="heart"></i></a>
                {% endif %}
            </div>
        <div class="collapse" id="collapseExample">
            <div class="mt-2">
                Pour utiliser les avantages de la Liste d'envies, veuillez vous <a href="{{path('app_login')}}">connecter</a> ou <a href="{{path('app_register')}}">cr√©ez</a> votre compte client.
            </div>
        </div>

        </div>
    </div>
</div>
{% endblock %}
